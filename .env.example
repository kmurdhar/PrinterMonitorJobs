# Printer Monitoring System - Environment Configuration

# Application Settings
NODE_ENV=development
PORT=5173
VITE_APP_NAME=PrintMonitor
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=10000

# Database Configuration (for backend integration)
DATABASE_URL=postgresql://printmonitor_user:your_password@localhost:5432/printmonitor
DB_HOST=localhost
DB_PORT=5432
DB_NAME=printmonitor
DB_USER=printmonitor_user
DB_PASSWORD=your_secure_password

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# External Services
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_SECRET=your_webhook_secret

# Development Settings
VITE_ENABLE_DEVTOOLS=true
VITE_MOCK_API=true
VITE_DEBUG_MODE=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# VITE_ENABLE_DEVTOOLS=false
# VITE_MOCK_API=false
# VITE_DEBUG_MODE=false
# LOG_LEVEL=info